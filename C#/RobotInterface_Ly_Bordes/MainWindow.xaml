<Window x:Class="RobotInterface_Ly_Bordes.MainWindow"
        xmlns:oscillo="clr-namespace:WpfOscilloscopeControl;assembly=WpfOscilloscopeControl"
        xmlns:AsservDisplay="clr-namespace:WpfAsservissementDisplay;assembly=WpfAsservissementDisplay"
        xmlns:map="clr-namespace:WpfWorldMap;assembly=WpfWorldMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotInterface_Ly_Bordes"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900"
        Background="Black"
        Foreground="black">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <GroupBox x:Name="Reception" Grid.Column="1" Grid.Row="0" Header="Reception" Background="Black" BorderBrush="White" Foreground="White">
            <TextBox x:Name="RichTextBox" Background="Black" Foreground="White" BorderBrush="White" HorizontalAlignment="Stretch" Margin="0" TextWrapping="Wrap" IsReadOnly="True" Text="" TextChanged="TextBox_TextChanged" />
        </GroupBox>

        <GroupBox x:Name="Emission" Grid.Column="0" Grid.Row="0" Header="Emission" Background="Black" BorderBrush="White" Foreground="White">
            <TextBox x:Name="TextBoxEmission" Background="Black" Foreground="White" BorderBrush="White" HorizontalAlignment="Stretch" AcceptsReturn="True" Margin="0" TextWrapping="Wrap" Text="" KeyUp="TextBoxEmission_KeyUp" />
        </GroupBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,1" Grid.Row="1">
            <Button x:Name ="buttonEnvoyer" Content="Envoyer" Width="60" Margin="5" Click="buttonEnvoyer_Click" Background="Black" Foreground="White" BorderBrush="White"/>
            <Button x:Name ="buttonTest" Content="Test" Width="60" Margin="5" Click="buttonTest_Click" Background="Black" Foreground="White" BorderBrush="White"/>
            <Button x:Name ="buttonClear" Content="Clear" Width="60" Margin="5" Click="buttonClear_Click" Background="Black" Foreground="White" BorderBrush="White"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.RowSpan="1">
            <GroupBox x:Name="Leds" Header="Leds" Background="Black" Foreground="White" BorderBrush="White">
                <StackPanel Orientation="Vertical">
                    <CheckBox x:Name="Led1" Content="Led1" Foreground="White" Background="Black" Checked="Led1_Checked" Unchecked="Led1_Checked"/>
                    <CheckBox x:Name="Led2" Content="Led2" Foreground="White" Background="Black" Checked="Led2_Checked" Unchecked="Led2_Checked"/>
                    <CheckBox x:Name="Led3" Content="Led3" Foreground="White" Background="Black" Checked="Led3_Checked" Unchecked="Led3_Checked"/>
                    <CheckBox x:Name="Led4" Content="Led4" Foreground="White" Background="Black" Checked="Led4_Checked" Unchecked="Led4_Checked"/>
                    <CheckBox x:Name="Led5" Content="Led5" Foreground="White" Background="Black" Checked="Led5_Checked" Unchecked="Led5_Checked"/>
                </StackPanel>
            </GroupBox>

            <GroupBox x:Name="IRTels" Header="Telemetres IR" Background="Black" Foreground="White" BorderBrush="White">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="IR Plus Gauche :" Foreground="White"/>
                        <Label x:Name="IRpg" Content="..." Foreground="White"/>
                        <Label Content="cm" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="IR Gauche  :" Foreground="White"/>
                        <Label x:Name="IRg" Content="..." Foreground="White"/>
                        <Label Content="cm" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="IR Centre :" Foreground="White"/>
                        <Label x:Name="IRc" Content="..." Foreground="White"/>
                        <Label Content="cm" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" >
                        <Label Content="IR Droite  :" Foreground="White"/>
                        <Label x:Name="IRd" Content="..." Foreground="White"/>
                        <Label Content="cm" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="IR Plus Droite :" />
                        <Label x:Name="IRpd" Content="..." />
                        <Label Content=" cm" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox x:Name="Motors" Header="Moteurs" Width="131" Background="Black" Foreground="White" BorderBrush="White">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Vitesse Gauche :" Foreground="White"/>
                        <Label x:Name="vitg" Content="..." Foreground="White"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Vitesse Droite :" Foreground="White"/>
                        <Label x:Name="vitd" Content="..." Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <AsservDisplay:AsservissementRobot2RouesDisplayControl x:Name="asservSpeedDisplay" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3"/>
        <oscillo:WpfOscilloscope x:Name="oscilloSpeed" Grid.Column="0" Grid.Row="3"  />
        


    </Grid>
</Window>
